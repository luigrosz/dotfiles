{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:7b"
    },
    "version": "2"
  },
  "soft_wrap": "editor_width",
  "ui_font_size": 18,
  "buffer_font_size": 17,
  "format_on_save": "on",
  "tab_size": 2,
  "formatter": "language_server",
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "csv": true,
    "git-firefly": true,
    "make": true,
    "rainbow-csv": true,
    "sql": true,
    "svelte": true,
    "toml": true,
    "xml": true
  }
}
